<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/on_btn_pressed_selector"
    android:layout_height="match_parent">

    <com.beautyteam.everpay.Views.RoundedImageView
        android:id="@+id/debtors_list_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/debtors_list_item_summa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="24dip"
            android:layout_marginTop="3dp"
            android:paddingTop="3dp"
            android:text="500"/>
        <TextView
            android:id="@+id/debtors_list_item_discript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:fontFamily="sans-serif-light"
            android:text="Маша Бережнова, член партии"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"

            />
    </LinearLayout>

</LinearLayout>