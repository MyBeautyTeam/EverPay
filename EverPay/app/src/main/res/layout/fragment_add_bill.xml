<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_material_light"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#daf1f1f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/add_bill_title"
            android:layout_width="match_parent"
            android:hint="Название счета"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:maxLines="1"
            android:maxLength="50"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:background="#daf1f1f1"
        android:layout_weight="1.67"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/add_bill_equally_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ПОРОВНУ"
                android:textSize="18dp"
                android:textColor="@color/dark_primary"
                android:gravity="right|center"
                />
            <LinearLayout
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/add_bill_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchCompat"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/add_bill_not_equally_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="НЕ ПОРОВНУ"
                android:gravity="left|center"
                android:textSize="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Сумма счета"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/add_bill_need_summa_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/rubble"
                android:textSize="16dp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/add_bill_need_summa_edit"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:textSize="16dp"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="9"
                android:hint="@string/rubble_null"
                />
            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/add_bill_left_summa_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#daeeeeee"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="Уже\nподелено"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/add_bill_left_summa"
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/rubble_null"
                    android:textSize="14dp"

                    android:textColor="@color/red_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="Осталось\nподелить"
                    android:minLines="2"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/add_bill_left_ostalos"
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="@string/rubble_null"
                    android:textSize="14dp"
                    android:textColor="@color/red_text"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:elevation="1.5dp"
        android:background="#a0e0e0e0"
        android:layout_marginBottom="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        >
        <LinearLayout
            android:layout_weight="1.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
        <TextView
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Потратил"
            android:drawableBottom="@drawable/package_up"
            android:gravity="center"
            android:textSize="13dp"
            />
        <TextView
            android:id="@+id/add_bill_name_put"
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Оплатил"
            android:gravity="center"
            android:drawableBottom="@drawable/package_down"
            android:textSize="13dp"
            />
        <LinearLayout
            android:layout_weight="2.1"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
        android:id="@+id/add_bill_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:divider="@null"
        android:dividerHeight="7dp"
        style="@style/ListViewOverscroll"
    />


</LinearLayout>
