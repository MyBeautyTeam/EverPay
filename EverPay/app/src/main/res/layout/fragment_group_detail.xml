<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/group_detail_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_gravity="center"
        android:listSelector="@android:color/transparent"
        android:layout_weight="1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        />
    <Button
        android:id="@+id/group_add_bill_btn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ДОБАВИТЬ СЧЕТ"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/dark_primary"
        android:background="@drawable/btn_add_friend_style"
        android:drawableLeft="@drawable/cash"
        android:drawablePadding="8dp"
        android:layout_weight="0"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/group_calc_btn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РАССЧИТАТЬ"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:textColor="@color/dark_primary"
        android:background="@drawable/on_btn_pressed_selector"
        android:drawableLeft="@drawable/calculator"
        android:drawablePadding="8dp"
        android:layout_weight="0"
        />
    <Button
        android:id="@+id/group_show_bill_btn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Просмотр счета"
        />


</LinearLayout>