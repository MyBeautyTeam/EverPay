<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удаление"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#b7000000"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы уверены, что хотите удалить счет? Операцию нельзя будет отменить."
            android:textSize="16dp"
            android:textColor="#b7000000"
            android:layout_marginBottom="16dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/dialog_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/on_btn_pressed_selector"
                android:textColor="@color/primary"
                android:padding="3dp"
                android:text="Удалить"
                />
            <Button
                android:id="@+id/dialog_btn_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/on_btn_pressed_selector"
                android:textColor="@color/primary"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:text="Отмена"
                />
        </LinearLayout>

