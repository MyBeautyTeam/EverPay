<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/avatar"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/calc_details_debt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Долг в группе:"
                />
            <TextView
                android:id="@+id/calc_details_summa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2500"
                android:textSize="35dp"
                android:gravity="center"

                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Счет"
            android:gravity="center"
            android:textSize="16dp"
            />
        <TextView
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Должен"
            android:drawableBottom="@drawable/package_up"
            android:gravity="center"
            android:textSize="14dp"
            />
        <TextView
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Внес"
            android:gravity="center"
            android:drawableBottom="@drawable/package_down"
            android:textSize="14dp"
            />
        <TextView
            android:layout_weight="1.8"
            android:layout_marginRight="5dp"
            android:text="Баланс"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ListView
        android:id="@+id/calc_details_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>