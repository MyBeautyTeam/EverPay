<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/on_drawer_pressed_selector">

    <com.beautyteam.everpay.Views.RoundedImageView
        android:id="@+id/friends_list_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />
    <TextView
        android:id="@+id/friends_list_item_discript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:text="New Text"
        />
    <CheckBox
        android:id="@+id/friends_checkbox"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginLeft="15dp"
        android:padding="5dp"

        />

</LinearLayout>