<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:visibility="invisible"
        />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation = "vertical">
    <com.beautyteam.everpay.Views.RoundedImageView
        android:id="@+id/friends_list_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/friends_list_item_discript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:text="New Text"
        android:layout_toRightOf="@+id/friends_list_item_avatar"
        android:layout_toLeftOf="@+id/friends_checkbox"
        android:layout_centerVertical="true"
        />
    <CheckBox
        android:id="@+id/friends_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:padding="5dp"
        android:layout_alignParentRight= "true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
    </LinearLayout>