<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="match_parent"
android:clickable="true"
android:background="@drawable/on_group_pressed_selector"
android:gravity="center_vertical|center_horizontal"
    >
<TextView
    android:id="@+id/separator"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="6dp"
    android:fontFamily="sans-serif-light"
    android:textSize="30dp"
    android:textColor="@color/primary"
    android:layout_weight="0.12"
    />
<com.beautyteam.everpay.Views.RoundedImageView
    android:id="@+id/friends_list_item_avatar"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_margin="@dimen/activity_horizontal_margin"
    />
<TextView
    android:id="@+id/friends_list_item_discript"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:text="Илья Абашин"
    android:textSize="16dp"
    android:fontFamily="sans-serif-light"
    android:layout_weight="0.63"
    />
    <CheckBox
        android:id="@+id/friends_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginRight="16dp"
        android:layout_weight="0.13"
        />
</LinearLayout>
