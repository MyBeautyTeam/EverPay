<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ProgressBar
        android:id = "@+id/progressBar_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true" />
    <ImageView
        android:id ="@+id/not_sended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/alert_circle"
        android:padding="10dp"
        android:background="@drawable/on_btn_pressed_selector"
        />
    <TextView
        android:id="@+id/item_group_details_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16dip"
        android:fontFamily="sans-serif-light"
        android:text="Поход в кино"
        android:gravity="center"
        android:layout_margin="2dp"
        android:padding="10dp"
        />
</LinearLayout>