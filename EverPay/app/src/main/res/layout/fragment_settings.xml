<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background_material_light"
    android:clickable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="left|center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primary"
                android:text="ПУШ-УВЕДОМЛЕНИЯ"
                android:clickable="false"
                android:textSize="16dp"
                />
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/setting_switch_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompat"
                android:layout_marginRight="16dp"
                android:padding="3dp"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="left|center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primary"
                android:text="ПОДСКАЗКИ"
                android:clickable="false"
                android:textSize="16dp"
                />
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/setting_switch_advice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/SwitchCompat"
                android:layout_marginRight="16dp"
                android:padding="3dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/text_history"
        android:layout_marginBottom="16dp"
        >
        <Button
            android:id="@+id/evaluate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оценить"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/btn_vk_login_style"
            android:textColor="@color/primary"
            />
        <Button
            android:id="@+id/bug_report_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Связаться с разработчиками"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_vk_login_style"
            android:textColor="@color/primary"
            />
    </LinearLayout>
    <Button
        android:id="@+id/quit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quit"
        android:layout_gravity="bottom"
        android:background="@drawable/btn_vk_login_style"
        android:textColor="@color/primary"
        android:layout_margin="16dp"
        />
</LinearLayout>