<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/background_material_light"
    android:orientation="vertical"
    >
    <ListView
        android:id="@+id/friends_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="8dp"
        style="@style/ListViewOverscroll"
        />
    <Button
        android:id="@+id/create_btn_user_add_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/dark_primary"
        android:background="@drawable/btn_add_friend_style"
        android:drawableLeft="@drawable/account_plus"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/create_user"
        android:drawablePadding="8dp"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/save_btn_friends_in_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_gravity="center"
        android:textColor="@color/dark_primary"
        android:background="@drawable/on_btn_pressed_selector"
        android:drawableLeft="@drawable/ic_check_black_18dp"
        android:drawablePadding="8dp"
        android:textSize="14dp"
        android:text="@string/ready"
        android:layout_weight="0"/>
</LinearLayout>
