<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/light_blue_600</item>

        <item name="android:color">@color/primary_text_default_material_dark</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/light_blue_800</item>

        <!-- colorAccent is used as the default value for colorControlActivated
        which is used to tint widgets -->

        <item name="colorAccent">#123456</item>
        <item name="android:textColorSecondary">@color/cyan_100</item>

        <!-- You can also set colorControlNormal, colorControlActivated
        colorControlHighlight & colorSwitchThumbNormal. -->
    </style>
</resources>